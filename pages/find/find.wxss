/* pages/find/find.wxss */

.page{
  background-color: #f5f5f5;
}

.weui-grids{
   background-color: #fff; 
}

.advert .weui-grid{
  width: 50%;
  height: 90px;
}

.advert .weui-grid:nth-of-type(1){
  width: 50%;
  height: 180px;
  box-sizing: border-box;
  position: relative;
}

.advert .weui-grid:nth-of-type(1) .weui-grid__icon{
  height: 90px;
  width: 90px;
  position: absolute;
  top: calc(100% - 100px);
  right: 10px;
}

.advert .weui-grid__label{
  text-align: left;
}

.advert .weui-grid__icon{
  height: 60px;
  width: 60px;
  position: absolute;
  top: calc(50% - 30px);
  right: 10px;
}

.gift{
  margin-top: 10px;
}